<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:startDestination="@id/fragment_Main">

    <fragment
        android:id="@+id/fragment_Main"
        android:name="ConCalc.Activity.Fragment_Main"
        android:label="fragment_main"
        tools:layout="@layout/main_fragment">
        <action
            android:id="@+id/action_fragment_Main_to_inputScreen_Fragment"
            app:destination="@id/inputScreen_Fragment" />
        <action
            android:id="@+id/action_fragment_Main_to_settingsFragment"
            app:destination="@id/settingsFragment" />
    </fragment>
    <fragment
        android:id="@+id/inputScreen_Fragment"
        android:name="ConCalc.Activity.input_screen.InputScreen_Fragment"
        android:label="fragment_input2"
        tools:layout="@layout/input_fragment">
        <action
            android:id="@+id/action_inputScreen_Fragment_to_fragment_Main"
            app:destination="@id/fragment_Main"
            app:popUpTo="@+id/fragment_Main"
            app:popUpToInclusive="true" />
        <argument
            android:name="type"
            app:argType="integer" />
        <argument
            android:name="title"
            app:argType="string" />
        <argument
            android:name="id"
            android:defaultValue="null"
            app:argType="string"
            app:nullable="true" />
    </fragment>
    <fragment
        android:id="@+id/settingsFragment"
        android:name="ConCalc.Activity.SettingsFragment"
        android:label="SettingsFragment" />
</navigation>